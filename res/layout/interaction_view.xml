<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/videoiconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/videoiconCD"
        android:src="@drawable/icon_video" />

    <ImageButton
        android:id="@+id/nfciconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/nfciconCD"
        android:src="@drawable/icon_nfc" />

    <ImageButton
        android:id="@+id/qriconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/qriconCD"
        android:src="@drawable/icon_qr" />

</LinearLayout>