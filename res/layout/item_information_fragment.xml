<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Gallery
            android:id="@+id/image_gallery"
            android:layout_width="match_parent"
            android:layout_height="150dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/name_label"
                style="@style/SubTitle.White"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Fullname of the item" />

            <ImageButton
                android:id="@+id/info_button"
                style="@style/SubTitle.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:src="@android:drawable/ic_menu_info_details" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lowest_price_label"
                style="@style/Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".69"
                android:text="As low as $59.99" />

            <TextView
                android:id="@+id/winners_label"
                style="@style/Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".69"
                android:gravity="right"
                android:text="# Winners today" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_details"
            style="@style/Content"
            android:padding="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This will details about the particular item.  Blah blah blah blah" />

        <TextView
            android:id="@+id/vendors_label"
            style="@style/SubTitle.White"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="Vendors" />
    </LinearLayout>

</ScrollView>